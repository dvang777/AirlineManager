<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirlineManager"
        xmlns:ViewModel="clr-namespace:AirlineManager.ViewModel" x:Class="AirlineManager.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="469.658" Width="955.769">
    <Window.DataContext>
        <ViewModel:FlightPlan/>
    </Window.DataContext>


    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="271" Margin="589,38,0,0" VerticalAlignment="Top" Width="340" ItemsSource="{Binding FlightList}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FlightNumber}" />
                        <TextBlock Text="{Binding AssignedAircraft}"/>
                        <TextBlock Text="{Binding Origin}"/>
                        <TextBlock Text="{Binding Destination}"/>
                        <TextBlock Text="{Binding departure}"/>
                        <TextBlock Text="{Binding arrival}"/>
                        <TextBlock Text="{Binding Time}"/>
                        <TextBlock Text="{Binding Distance}"/>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
